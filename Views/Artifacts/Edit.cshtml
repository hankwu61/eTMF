@model ETMF.Models.Artifact

@{
    ViewData["Title"] = "编辑文档类型";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-edit"></i> 编辑文档类型
        </h6>
        <div class="dropdown no-arrow">
            <a class="btn btn-secondary btn-sm" asp-action="Index">
                <i class="fas fa-arrow-left"></i> 返回列表
            </a>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group row">
                <label asp-for="SectionId" class="col-sm-2 col-form-label">所属部分</label>
                <div class="col-sm-10">
                    <select asp-for="SectionId" class="form-control" asp-items="ViewBag.SectionId"></select>
                    <span asp-validation-for="SectionId" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <label asp-for="Number" class="col-sm-2 col-form-label">编号</label>
                <div class="col-sm-10">
                    <input asp-for="Number" class="form-control" placeholder="输入文档类型编号，例如：01" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">名称</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="输入文档类型名称，例如：试验计划" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label">描述</label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="输入文档类型的详细描述"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">必要性</label>
                <div class="col-sm-10">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" asp-for="IsRequired" />
                        <label class="form-check-label" asp-for="IsRequired">必需</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" asp-for="IsEssential" />
                        <label class="form-check-label" asp-for="IsEssential">关键</label>
                    </div>
                    <small class="form-text text-muted">必需：该类型文档必须上传；关键：该类型文档对于试验结果的管理和分析至关重要</small>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> 保存
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="fas fa-times"></i> 取消
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 